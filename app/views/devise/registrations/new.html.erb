<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="form-row">
  <div class="form-group col-sm-6" style="margin-bottom: 0;">
    <%= f.label :email , class: "col-form-label-sm" , style: "margin-bottom: 0; padding-bottom: 0;" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control form-control-sm"%>
  </div>

  <div class="form-group col-sm-6" style="margin-bottom: 0;">
    <%= f.label :name , class: "col-form-label-sm" , style: "margin-bottom: 0; padding-bottom: 0;"%><br />
    <%= f.text_field :name, autofocus: true, class: "form-control form-control-sm" %>
  </div>
</div>

<div class="form-row">
  <div class="form-group col-sm-6" style="margin-bottom: 0;">
    <%= f.label :birthday , class: "col-form-label-sm" , style: "margin-bottom: 0; padding-bottom: 0;"%><br />
    <%= f.date_field :birthday, autofocus: true, class: "form-control form-control-sm" %>
  </div>

  <div class="form-group col-sm-6" style="margin-bottom: 0;">
    <%= f.label :phone_number, class: "col-form-label-sm" , style: "margin-bottom: 0; padding-bottom: 0;"%><br />
    <%= f.text_field :phone_number, autofocus: true, class: "form-control form-control-sm"  %>
  </div>
</div>

<div class="form-row">
  <div class="form-group col-sm-6" style="margin-bottom: 0;">
    <%= f.label :password , class: "col-form-label-sm" , style: "margin-bottom: 0; padding-bottom: 0;"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-sm" %>
  </div>

  <div class="form-group col-sm-6" style="margin-bottom: 0;">
    <%= f.label :password_confirmation , class: "col-form-label-sm" , style: "margin-bottom: 0; padding-bottom: 0;"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-sm" %>
  </div>

</div>



<div class="form-row">
  <div class="form-group col-sm-4" style="margin-bottom: 0;">
    <%= f.label :country, class: "col-form-label-sm" , style: "margin-bottom: 0; padding-bottom: 0;"%><br />
    <%= f.text_field :country, autofocus: true, class: "form-control form-control-sm"  %>
  </div>

  <div class="form-group col-sm-4" style="margin-bottom: 0;">
    <%= f.label :state , class: "col-form-label-sm" , style: "margin-bottom: 0; padding-bottom: 0;"%><br />
    <%= f.text_field :state, autofocus: true, class: "form-control form-control-sm"  %>
  </div>

  <div class="form-group col-sm-4" style="margin-bottom: 0;">
    <%= f.label :city , class: "col-form-label-sm" , style: "margin-bottom: 0; padding-bottom: 0;"%><br />
    <%= f.text_field :city, autofocus: true, class: "form-control form-control-sm"  %>
  </div>
</div>
<hr>
<!-- Field for the recaptcha helper -->

<div class="row">
  <div class="col-sm" style="padding-left:0;">
    <%= recaptcha_tags %>
</div>

    <div class="actions col-sm" style="padding-right: 0; margin-top: 8px;">
      <%= f.submit "Sign up", class: "rounded pull-right" %>
    </div>
  <%# render "devise/shared/links" %>
  </div>

<% end %>
