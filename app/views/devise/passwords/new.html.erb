<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
<div class="form-row">
  <div class="form-group col-md-6">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control form-control-sm"%>
  </div>
</div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" , class: "btn btn-default rounded" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
