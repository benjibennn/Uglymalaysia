</body>

<script>
  var header = $(".sticky-social");
    $(window).scroll(function() {
      var scroll = $(window).scrollTop();
         if (scroll >= 400) {
            header.addClass("fixed");
          } else {
            header.removeClass("fixed");
          }
  });
</script>
