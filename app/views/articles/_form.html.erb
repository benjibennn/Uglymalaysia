<%= form_with(model: article, local: true) do |f| %>


<div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :images %>
    <%= f.file_field :images, multiple: true  %>
  </div>

<%= f.hidden_field :user_id, :value => current_user.id %>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
