<!DOCTYPE html>
<html>
  <head>
    <title>UM</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


      <nav class="navbar navbar-expand-lg navbar-light sticky-top">
        <a class="navbar-brand" href="/">Uglymalaysia</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active"><a class="nav-link active" href="/">Home <span class="sr-only">(current)</span></a></li>
            <li class="nav-item"><a class="nav-link light" href="/articles/trending">Pedas News</a></li>
            <li class="nav-item"><a class="nav-link light" href="/articles/most_views">Durian Runtuh</a></li>
          </ul>

          <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item"><a class="nav-link light"><strong class="circle"><%= current_user.name[0] %></strong></a></li>
                <li class="nav-item"><a class="nav-link light" href="/articles/new">Create Post</a></li>
                <li class="nav-item"><a class="nav-link light" href="/users/edit">Edit Profile</a></li>
                <li class="nav-item"><%= link_to"Logout",destroy_user_session_path, class: "nav-link light", method: :delete%></li>
              <% else %>
                <li class="nav-item"><a class="nav-link light" href="/users/sign_in">Create Post</a></li>
                <li class="nav-item"><a class="nav-link light" href="/users/sign_up">Sign Up</a></li>
                <li class="nav-item"><a class="nav-link light" href="/users/sign_in">Login</a></li>
              <% end %>
          </ul>
        </div>

      </nav>

      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <p class="navbar-text pull-right">

<!-- Sign Up Modal -->
      <div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg" >
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Sign up with email</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <h6>Enter your particulars for your account, and we'll send a verification link to your inbox.</h6>
            <div class="container-fluid">
              <%= render(template: "devise/registrations/new")%>
            </div>
            </div>
          </div>
        </div>
      </div>
<!-- Sign Up Modal End -->

<!-- Login Modal -->
      <div class="modal fade"  id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" style="text-align:center;" id="exampleModalLongTitle">Welcome Back!</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <h6  style="text-align:center;">Sign in to access share stories, like articles and leave your thoughts that matters to you.</h6>
            <div class="container-fluid">
              <div class="partial">
                <%= render partial: 'partial/loginlinks'%>
              </div>

      <%= yield %>


              <p id="loginemail"></p>
              <%= link_to "Back" ,"", id: "backtomodal"%>
            </div>
            </div>
          </div>
        </div>
      </div>
<!-- Login Modal End -->


      <%= yield %>


      <script>
      $(document).ready(function(){
        $('#backtomodal').hide();
          $("#email").on("click", function(event){
            event.preventDefault();
            $('.partial').hide();
            $("#loginemail").append("<%= escape_javascript(render(template: "devise/sessions/new"))%>");
            $('#backtomodal').show();
            backtoModal();
          })
      });
      function backtoModal(){
        $("#backtomodal").on("click",function(event){
          event.preventDefault();
          $("#loginemail").remove();
          $('#backtomodal').hide();
          $('.partial').show();
        });
      }

      </script>
  </body>
</html>
